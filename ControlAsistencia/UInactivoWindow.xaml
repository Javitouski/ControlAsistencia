<Window x:Class="ControlAsistencia.UInactivoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlAsistencia.Models"
        mc:Ignorable="d"
        Title="Usuarios Inactivos" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <!-- Fondo degradado -->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F4F9F9" Offset="0"/>
            <GradientStop Color="#E9FFFE" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <!-- Estilo general para el DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="RowBackground" Value="#F9F9F9"/>
            <Setter Property="AlternatingRowBackground" Value="#E9FFFE"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="RowHeight" Value="32"/>
        </Style>

        <!-- Estilo para cabeceras -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#30E3CA"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="6"/>
        </Style>

        <!-- Estilo para botón principal -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#30E3CA"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.25"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#2CD8BE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Grid.Row="0" Background="#3FC1C9" CornerRadius="8" Padding="12" Margin="0,0,0,12">
            <TextBlock Text="Usuarios Inactivos"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"/>
        </Border>

        <!-- DataGrid de usuarios -->
        <DataGrid x:Name="listUsuarios"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserResizeRows="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="🆔 RUT" Binding="{Binding Rut}" Width="*"/>
                <DataGridTextColumn Header="👤 Nombre" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="✉️ Correo" Binding="{Binding Correo}" Width="*"/>
                <DataGridTextColumn Header="🔑 Rol" Binding="{Binding Rol}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botón Activar Usuario -->
        <Button Grid.Row="2"
                Content="Activar Usuario"
                Style="{StaticResource PrimaryButton}"
                Click="BtnActivar_Click"/>
    </Grid>
</Window>
