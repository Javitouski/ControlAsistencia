<Window x:Class="ControlAsistencia.ReportesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reportes de Asistencia" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgAsistencias"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionChanged="DataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Usuario" Binding="{Binding Usuario}" Width="*"/>
                <DataGridTextColumn Header="RUT" Binding="{Binding Rut}" Width="*"/>
                <DataGridTextColumn Header="Fecha/Hora" Binding="{Binding MarcaEn}" Width="*"/>
                <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="*"/>
                <DataGridTextColumn Header="Origen" Binding="{Binding Origen}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
