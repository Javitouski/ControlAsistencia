<Window x:Class="ControlAsistencia.ReportesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="📑 Reportes de Asistencia" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <!-- Fondo con degradado -->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F4F9F9" Offset="0"/>
            <GradientStop Color="#E9FFFE" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <!-- Estilo general para el DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="RowBackground" Value="#F9F9F9"/>
            <Setter Property="AlternatingRowBackground" Value="#E9FFFE"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="RowHeight" Value="32"/>
        </Style>

        <!-- Estilo para las cabeceras -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#30E3CA"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="6"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Grid.Row="0" Background="#3FC1C9" CornerRadius="8" Padding="12" Margin="0,0,0,12">
            <TextBlock Text="📑 Reportes de Asistencia"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"/>
        </Border>

        <!-- Tabla -->
        <DataGrid x:Name="dgAsistencias"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionChanged="DataGrid_SelectionChanged"
                  CanUserResizeRows="False"
                  CanUserAddRows="False"
                  
                  CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="👤 Usuario" Binding="{Binding Usuario}" Width="*"/>
                <DataGridTextColumn Header="🆔 RUT" Binding="{Binding Rut}" Width="*"/>
                <DataGridTextColumn Header="📅 Fecha/Hora" Binding="{Binding MarcaEn}" Width="*"/>
                <DataGridTextColumn Header="📌 Tipo" Binding="{Binding Tipo}" Width="*"/>
                <DataGridTextColumn Header="🌐 Origen" Binding="{Binding Origen}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
