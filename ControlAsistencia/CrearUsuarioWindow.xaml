<Window x:Class="ControlAsistencia.CrearUsuarioWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crear Usuario"
        Height="545" Width="370"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#E0F7F7">

    <Grid Margin="16">
        <Border CornerRadius="12" Background="White" Padding="24" BorderBrush="#DDD" BorderThickness="1"
                Effect="{DynamicResource DropShadow}">
            <StackPanel>
                <!-- Título -->
                <TextBlock Text="➕ Nuevo Usuario"
                           FontWeight="Bold"
                           FontSize="20"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"
                           Foreground="#11999E"/>

                <!-- RUT -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                    <Label Content="RUT"/>
                    <TextBox x:Name="txtRut" Height="30" Margin="0,4,0,0" TextChanged="txtRut_TextChanged"
                             Padding="4" BorderBrush="#30E3CA" BorderThickness="1" Background="#F9FFFF"/>
                    <TextBlock x:Name="lblRutError" Foreground="Red" FontSize="12" Visibility="Collapsed"/>
                </StackPanel>

                <!-- Nombre -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                    <Label Content="Nombre"/>
                    <TextBox x:Name="txtNombre" Height="30" Margin="0,4,0,0"
                             Padding="4" BorderBrush="#30E3CA" BorderThickness="1" Background="#F9FFFF"/>
                    <TextBlock x:Name="lblNombreError" Foreground="Red" FontSize="12" Visibility="Collapsed"/>
                </StackPanel>

                <!-- Correo -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                    <Label Content="Correo"/>
                    <TextBox x:Name="txtCorreo" Height="30" Margin="0,4,0,0"
                             Padding="4" BorderBrush="#30E3CA" BorderThickness="1" Background="#F9FFFF"/>
                    <TextBlock x:Name="lblCorreoError" Foreground="Red" FontSize="12" Visibility="Collapsed"/>
                </StackPanel>

                <!-- Contraseña -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                    <Label Content="Contraseña"/>
                    <PasswordBox x:Name="txtContraseña" Height="30" Margin="0,4,0,0"
                                 Padding="4" BorderBrush="#30E3CA" BorderThickness="1" Background="#F9FFFF"/>
                    <TextBlock x:Name="lblContraseñaError" Foreground="Red" FontSize="12" Visibility="Collapsed"/>
                </StackPanel>

                <!-- Rol -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,20">
                    <Label Content="Rol"/>
                    <ComboBox x:Name="cmbRol" Height="30" Margin="0,4,0,0"
                              Padding="4" BorderBrush="#30E3CA" BorderThickness="1" Background="#F9FFFF"/>
                    <TextBlock x:Name="lblRolError" Foreground="Red" FontSize="12" Visibility="Collapsed"/>
                </StackPanel>

                <!-- Botones -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Guardar"
                            Width="100"
                            Height="36"
                            Background="#30E3CA"
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Margin="0,0,10,0"
                            Cursor="Hand"
                            Click="BtnGuardar_Click"/>
                    <Button Content="Cancelar"
                            Width="100"
                            Height="36"
                            Background="#CCCCCC"
                            Foreground="Black"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BtnCancelar_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>

    <!-- Definición de DropShadow -->
    <Window.Resources>
        <DropShadowEffect x:Key="DropShadow" Color="#888" BlurRadius="12" ShadowDepth="4" Opacity="0.25"/>
    </Window.Resources>
</Window>
