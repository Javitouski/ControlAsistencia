<Window x:Class="ControlAsistencia.ExportarReportesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exportar Reportes" Height="272" Width="741"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filtros -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Fecha Inicio:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <DatePicker x:Name="dpFechaInicio" Width="150"/>

            <TextBlock Text="   Fecha Fin:" VerticalAlignment="Center" Margin="20,0,10,0"/>
            <DatePicker x:Name="dpFechaFin" Width="150"/>

            <TextBlock Text="   RUT:" VerticalAlignment="Center" Margin="20,0,10,0"/>
            <TextBox x:Name="txtRut" Width="150"/>
        </StackPanel>

        <!-- Botón -->
        <Button Grid.Row="1" Content="Exportar a Excel"
                Width="200" Height="40"
                HorizontalAlignment="Center"
                Click="BtnExportar_Click"/>
    </Grid>
</Window>
