<Window x:Class="ControlAsistencia.EditarUsuariosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Usuario"
        Height="550" Width="380"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#E0F7F7">

    <Grid Margin="16">
        <Border CornerRadius="12" Background="White" Padding="20" BorderBrush="#CCC" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Editar Usuario" FontSize="20" FontWeight="Bold" Foreground="#11999E"
                           Margin="0,0,0,16" HorizontalAlignment="Center"/>

                <!-- RUT -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                    <Label Content="RUT"/>
                    <TextBox x:Name="txtRut" Height="30" Margin="0,4,0,0" IsReadOnly="True"
                             Padding="4" BorderBrush="#30E3CA" BorderThickness="1" Background="#F9FFFF"/>
                    <TextBlock x:Name="lblRutError" Foreground="Red" FontSize="12" Visibility="Collapsed"/>
                </StackPanel>

                <!-- Nombre -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                    <Label Content="Nombre"/>
                    <TextBox x:Name="txtNombre" Height="30" Margin="0,4,0,0"
                             Padding="4" BorderBrush="#30E3CA" BorderThickness="1" Background="#F9FFFF"/>
                    <TextBlock x:Name="lblNombreError" Foreground="Red" FontSize="12" Visibility="Collapsed"/>
                </StackPanel>

                <!-- Correo -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                    <Label Content="Correo"/>
                    <TextBox x:Name="txtCorreo" Height="30" Margin="0,4,0,0"
                             Padding="4" BorderBrush="#30E3CA" BorderThickness="1" Background="#F9FFFF"/>
                    <TextBlock x:Name="lblCorreoError" Foreground="Red" FontSize="12" Visibility="Collapsed"/>
                </StackPanel>

                <!-- Contraseña opcional -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                    <Label Content="Nueva Contraseña (opcional)"/>
                    <PasswordBox x:Name="txtContraseña" Height="30" Margin="0,4,0,0"
                                 Padding="4" BorderBrush="#30E3CA" BorderThickness="1" Background="#F9FFFF"/>
                    <TextBlock x:Name="lblContraseñaError" Foreground="Red" FontSize="12" Visibility="Collapsed"/>
                </StackPanel>

                <!-- Rol -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                    <Label Content="Rol"/>
                    <ComboBox x:Name="cmbRol" Height="30" Margin="0,4,0,0"
                              Padding="4" BorderBrush="#30E3CA" BorderThickness="1" Background="#F9FFFF"/>
                    <TextBlock x:Name="lblRolError" Foreground="Red" FontSize="12" Visibility="Collapsed"/>
                </StackPanel>

                <!-- Activo -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <CheckBox x:Name="chkActivo" Content="Usuario Activo" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Botones -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Guardar" Click="BtnGuardar_Click" Width="90" Margin="0,0,8,0"
                            Background="#30E3CA" Foreground="White" BorderThickness="0"/>
                    <Button Content="Cancelar" Click="BtnCancelar_Click" Width="90"
                            Background="#CCCCCC" Foreground="Black" BorderThickness="0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
