<Window x:Class="ControlAsistencia.UsuariosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlAsistencia.Models"
        mc:Ignorable="d"
        Title="UsuariosWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock FontSize="18" Margin="0,0,0,10"><Run Language="es-cl" Text="Gestión de Usuarios"/></TextBlock>
            <DataGrid x:Name="dgUsuarios" AutoGenerateColumns="False" Height="250" IsReadOnly="False" CanUserAddRows="True" SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="RUT" Binding="{Binding Rut}" Width="*"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Correo" Binding="{Binding Correo}" Width="*"/>
                    <DataGridComboBoxColumn Header="Rol"
                        SelectedItemBinding="{Binding Rol}" Width="*"
                        ItemsSource="{x:Static local:RolHelper.Roles}" />
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Crear" Click="BtnCrear_Click" Width="80" Margin="0,0,10,0"/>
                <Button Content="Editar" Click="BtnEditar_Click" Width="80" Margin="0,0,10,0"/>
                <Button Content="Desactivar" Click="BtnEliminar_Click" Width="80" Margin="0,0,10,0"/>
                <Button Content="Inactivos" Click="BtnInactivo_Click" Width="80" Margin="0,0,10,0"/>
                <Button Content="Actualziar" Click="BtnActualziar_Click" Width="80" Margin="0,0,10,0"/>
                <Button Content="Asignar horario" Click="BtnAsignarHorario_Click" Width="120" Margin="0,0,10,0"/>
                <Button Content="Historial horarios" Click="BtnHistorialHorarios_Click" Width="130" Margin="0,0,10,0"/>

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>